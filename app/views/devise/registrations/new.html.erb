<%= page_header do %>
  <h1>Sign Up For Familybook</h1>
<% end %>

<div class="row">
  <div class="span6">
    <h2>Your Information</h2>
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-vertical' }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.input :first_name, input_html: { class: 'input-xlarge' } %>
      <%= f.input :last_name, input_html: { class: 'input-xlarge' } %>
      <%= f.input :profile_name, input_html: { class: 'input-xlarge' } %>
      <%= f.input :email, input_html: { class: 'input-xlarge' } %>
      <%= f.input :password, input_html: { class: 'input-xlarge', autocomplete: 'off' } %>
      <%= f.input :password_confirmation, input_html: { class: 'input-xlarge', autocomplete: 'off' } %>
      <div class="form-actions">
        <%= f.submit "Sign up", class: 'btn btn-primary' %><br />
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
  <div class="span6">
    <h2>Why Sign Up?</h2>
    <p>
      <strong>A private place for Andrew's family and friend only</strong>
      I want to a private place to keep up to date with my family and friends, you can think this a private facebook and your private info will never be leaked to public :-)</p>

      <p><%= image_tag "https://fbcdn-sphotos-a-a.akamaihd.net/hphotos-ak-prn2/172615_10150141613285579_8373173_o.jpg", class: 'pull-right' %>
        Sign up if you are Andrew's friends!
      </p>
  </div>
</div>